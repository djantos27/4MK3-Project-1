<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Book Club</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <h1>Book Club</h1>

    <nav class="navbar navbar-expand-sm navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand text-truncate" href="#"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" href="/" style="text-decoration: underline;">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/bookList.html">Book List</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addRemove.html">Add/Remove Book</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/notes.html">Notes</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users.html">User Management</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/progress.html">Progress</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/meetings.html">Meetings</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <h1 class="text-center">Currently Reading</h1>

      {{#hasBooks}}
        <div class="row">
          {{#currentBooks}}
            <div class="col-md-4">
              <div class="card mx-auto mb-3" style="width: 18rem;">
                  <img src="{{coverUrl}}" class="card-img-top" alt="Book Cover">
                  <div class="card-body">
                      <h5 class="card-title">Title: {{title}}</h5>
                      <p class="card-text">Author: {{author}}</p>
                      <p class="card-text">Reading Dates: {{start_date}} - {{end_date}}</p>
                      <p class="card-text">Added by: {{added_by}}</p>
                  </div>
              </div>
            </div>
          {{/currentBooks}}
        </div>
      {{/hasBooks}}

      {{^hasBooks}}
        <p class="text-center">No current books selected.</p>
      {{/hasBooks}}

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
